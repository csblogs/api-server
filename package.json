{
  "name": "csblogs-api",
  "version": "0.0.1",
  "description": "An API to access CS Blogs feed and user data",
  "main": "app/server.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "npm run build-and-run | bunyan",
    "start-production": "node ./app/server.js",
    "build-and-run": "npm run build && node ./app/server.js",
    "build": "npm run build:js",
    "build:js": "rm -rf app/ && babel src/ -d app/ --copy-files",
    "lint": "eslint .",
    "test": "istanbul cover ./node_modules/.bin/_mocha -- --compilers js:babel-register --require tests/chai-config.js --recursive ./tests/**/*.tests.js",
    "deploy": "now --public --docker -e PORT=\"80\" -e CSBLOGS_DATABASE_NAME=@csb-db-name -e CSBLOGS_DATABASE_USERNAME=@csb-db-user -e CSBLOGS_DATABASE_PASSWORD=@csb-db-password -e CSBLOGS_DATABASE_HOST=@csb-db-host -e CSBLOGS_DATABASE_PORT=@csb-db-port -e CSBLOGS_DATABASE_LOG_SQL_STATEMENTS=\"true\" -e CSBLOGS_TOKEN_EXPIRY_IN_DAYS=\"1\""
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/csblogs/api.csblogs.com.git"
  },
  "keywords": [
    "blogs",
    "api",
    "rest",
    "json"
  ],
  "author": "Daniel Brown",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/csblogs/api.csblogs.com/issues"
  },
  "homepage": "https://github.com/csblogs/api.csblogs.com#readme",
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-plugin-array-includes": "^2.0.3",
    "babel-preset-es2015": "^6.16.0",
    "babel-register": "^6.16.3",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "eslint": "^3.7.0",
    "eslint-config-airbnb-base": "^8.0.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-mocha": "^4.5.1",
    "istanbul": "^1.0.0-alpha.2",
    "mocha": "^3.1.0",
    "now": "^0.25.1",
    "pre-commit": "^1.1.3"
  },
  "dependencies": {
    "ajv": "^4.7.7",
    "body-parser": "^1.15.2",
    "bunyan": "^1.8.1",
    "express": "^4.14.0",
    "helmet": "^2.3.0",
    "moment": "^2.15.1",
    "node-uuid": "^1.4.7",
    "passport": "^0.3.2",
    "passport-custom": "^1.0.5",
    "passport-http": "^0.3.0",
    "pg": "^6.1.0",
    "request": "^2.75.0",
    "sequelize": "^3.24.3"
  }
}
