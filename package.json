{
  "name": "csblogs-api",
  "version": "0.0.1",
  "description": "An API to access CS Blogs feed and user data",
  "main": "app/server.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "npm run build-and-run | bunyan",
    "create-env": "cp .env.sample .env",
    "build-and-run": "npm run build && node -r ./app/set-env.js ./app/server.js",
    "build": "npm run build:js",
    "build:js": "rm -rf app/ && babel src/ -d app/",
    "lint": "eslint .",
    "test": "istanbul cover ./node_modules/.bin/_mocha -- --compilers js:babel-register --require tests/chai-config.js --recursive ./tests/**/*.tests.js",
    "deploy": "npm run create-deployment-package && npm run upload-deployment-package && npm run delete-deployment-package",
    "create-deployment-package": "npm run build && zip -r eb-deployment-package.zip . --exclude node_modules/\\* .git/\\* app/\\* test/\\* .env",
    "upload-deployment-package": "",
    "delete-deployment-package": "rm eb-deployment-package.zip"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/csblogs/api.csblogs.com.git"
  },
  "keywords": [
    "blogs",
    "api",
    "rest",
    "json"
  ],
  "author": "Daniel Brown",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/csblogs/api.csblogs.com/issues"
  },
  "homepage": "https://github.com/csblogs/api.csblogs.com#readme",
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.7.2",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "eslint": "^2.5.1",
    "eslint-config-airbnb": "^6.2.0",
    "eslint-plugin-mocha": "^2.0.0",
    "istanbul": "^1.0.0-alpha.2",
    "mocha": "^2.4.5",
    "pre-commit": "^1.1.2"
  },
  "dependencies": {
    "bunyan": "^1.8.0",
    "dotenv": "^2.0.0",
    "express": "^4.13.4",
    "pg": "^4.5.1",
    "sequelize": "^3.20.0"
  }
}
